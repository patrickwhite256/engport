#new_announcement_page {
	background-image: url('<%=asset_path("picture.png")%>');

	#new_form {
		@extend .form-horizontal;
		margin-top: 120px;
		margin-bottom: 50px;
		background-color: rgba(255, 255, 255, 0.5);
		padding: 15px;
		border-radius: 20px;

		@media screen and (max-width: 800px) {
			margin-top: 50px;
		}

		h1 {
			text-align: center;
		}

		.form-control, .control-label {
			margin: 5px 0;
		}
		.btn.btn-primary {
			width: 100%;
			margin-top: 20px;
		}
	}
}
