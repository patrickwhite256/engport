#announcements_page {
  background-image: url(image_path('television.png'));

  h1 {
   text-align: center;
   color: rgb( 200, 70, 11 );
 }

 #meetings {
   max-width: 640px;
   margin: 10px auto;
   text-align: center;

   li {
       float: none;
       display: inline-block;
   }

   @media screen and (max-width: 400px) {
     max-width: 285px;
   }
 }

 .search_container {
   width: 100%;
   max-width: 600px;
   margin: 0 auto 10px;

   #announcement-search {
     text-align: center;

     #announcement-search-query {
       width: 100%;
     }

       @media screen and (max-width: 515px) {
	   width: 75%;
       }
   }

   button {
       width: 80px;
       padding: 5px 2px
   }
 }

 #export_bar {
   width: 100%;
   max-width: 550px;
   margin: 0 auto 20px;
   text-align: center;

   a.btn.btn-default.export {
     width: 170px;
     margin: 5px;
   }
 }

 #wookmark_container {
   position: relative;


   .event {
     background-color: rgba( 255, 255, 255, 0.4 );
     border-radius: 10px;
     padding: 10px;

     h3 {
      margin-top: 10px;
    }
    .date {
      font-weight: bold;
      text-align: right;
      float: right;
    }
    .caption {
      font-style: italic;
      font-size: 10px;
    }
  }
}
}
