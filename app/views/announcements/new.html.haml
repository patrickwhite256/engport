.wrapper#new_announcement_page

  = render partial: 'layouts/messages'
  
  .container
    .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3#new_form
      %h1= 'New Announcement'
      - @announcement.errors.full_messages.each do |e|
        %li{style: "padding-left: 15px"}=e
      = form_for @announcement do |f|
        .form-group
          = f.label :title, 'Title', class: 'col-sm-3 control-label'
          .col-sm-9
            = f.text_field :title, class: 'form-control'
        .form-group
          = label_tag :date_label, 'Date (optional)', class: 'col-sm-3 control-label'
          .col-sm-9
            = text_field_tag :date_entry, '', type: :date, class: 'form-control'
        .form-group
          = label_tag :time_label, 'Time (optional)', class: 'col-sm-3 control-label'
          .col-sm-9
            = text_field_tag :time_entry, '', type: :time, class: 'form-control'
        .form-group
          = f.label :location, 'Location (optional)', class: 'col-sm-3 control-label'
          .col-sm-9
            = f.text_field :location, class: 'form-control'
        .form-group
          = f.label :description, 'Description', class: 'col-sm-3 control-label'
          .col-sm-9
            = f.text_area :description, class: 'form-control'
        .form-group
          = label_tag :tag_label, 'Tags', class: 'col-sm-3 control-label'
          .col-sm-9
            = text_field_tag :tag_entry, '', class: 'form-control', placeholder: '#awesome #youdabombclarisse'
        .form-group
          .col-sm-10.col-sm-offset-1
            = f.submit 'Add', class: 'btn btn-primary'
